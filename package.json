{
	"name": "@natlibfi/melinda-record-import-harvester-helmet",
	"description": "Helmet record harvester for the Melinda record batch import system ",
	"author": {
		"name": "The National Library of Finland"
	},
	"keywords": [],
	"homepage": "https://github.com/natlibfi/melinda-record-import-harvester-helmet",
	"bugs": {
		"url": "https://github.com/natlibfi/melinda-record-import-harvester-helmet/issues"
	},
	"repository": {
		"type": "git",
		"url": "git@github.com:natlibfi/melinda-record-import-harvester-helmet.git"
	},
	"license": "AGPL-3.0+",
	"version": "1.0.0",
	"main": "./dist/index.js",
	"engines": {
		"node": ">=8"
	},
	"scripts": {
		"start": "babel-node src/index.js",
		"cli": "babel-node src/cli.js",
		"prepublishOnly": "npm run build:transpile",
		"check-deps": "npm-check;exit 0",
		"lint": "eslint --fix src",
		"test": "npm run lint",
		"clean": "rimraf build dist",
		"build:transpile": "babel src --source-maps --delete-dir-on-start --out-dir=dist --minified",
		"build": "npm run build:transpile && npm run check-deps",
		"watch": "cross-env DEBUG=1 NODE_ENV=test nodemon --watch src --exec 'npm test'"
	},
	"dependencies": {
		"@natlibfi/melinda-record-import-commons": "file:../melinda-record-import-commons",
		"http-status-codes": "^1.3.0",
		"moment": "^2.22.2",
		"node-fetch": "^2.0.0",
		"winston": "^3.0.0"
	},
	"devDependencies": {
		"@babel/cli": "^7.2.0",
		"@babel/core": "^7.2.0",
		"@babel/node": "^7.2.0",
		"@babel/preset-env": "^7.2.0",
		"@babel/register": "^7.0.0",
		"babel-eslint": "^8.2.6",
		"cross-env": "^5.2.0",
		"eslint": "^5.9.0",
		"eslint-config-xo": "^0.25.1",
		"eslint-plugin-import": "^2.13.0",
		"nodemon": "^1.18.7",
		"npm-check": "^5.9.0",
		"rimraf": "^2.6.2"
	},
	"eslintConfig": {
		"parser": "babel-eslint",
		"plugins": [
			"import"
		],
		"extends": [
			"xo",
			"plugin:import/errors"
		],
		"rules": {
			"prefer-arrow-callback": [
				"error"
			]
		}
	},
	"babel": {
		"presets": [
			[
				"@babel/preset-env",
				{
					"targets": {
						"node": "8"
					}
				}
			]
		]
	}
}
