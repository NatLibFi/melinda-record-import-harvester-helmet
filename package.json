{
	"name": "@natlibfi/melinda-record-import-harvester-helmet",
	"description": "Helmet record harvester for the Melinda record batch import system ",
	"author": {
		"name": "The National Library of Finland"
	},
	"keywords": [],
	"homepage": "https://github.com/natlibfi/melinda-record-import-harvester-helmet",
	"bugs": {
		"url": "https://github.com/natlibfi/melinda-record-import-harvester-helmet/issues"
	},
	"repository": {
		"type": "git",
		"url": "git@github.com:natlibfi/melinda-record-import-harvester-helmet.git"
	},
	"license": "MIT",
	"version": "1.0.4-alpha.1",
	"main": "./dist/index.js",
	"engines": {
		"node": ">=16"
	},
	"scripts": {
		"build": "babel src --source-maps --delete-dir-on-start --out-dir=dist",
		"start": "node ./dist/index",
		"cli": "node ./dist/cli",
		"lint": "eslint ./src",
		"lint:dev": "eslint --fix ./src",
		"test": "npm run lint && npm run test:base",
		"test:base": "cross-env NODE_ENV=test nyc mocha --package ./package.json",
		"test:dev": "npm run lint:dev && npm run test:base",
		"dev": "cross-env DEBUG=@natlibfi/* NODE_ENV=debug nodemon --watch src --exec 'npm run test:dev'",
		"dev2": "nodemon",
		"dev:debug": "cross-env LOG_LEVEL=debug DEBUG=@natlibfi/* NODE_ENV=test nodemon"
	},
	"dependencies": {
		"@babel/runtime": "^7.23.6",
		"@natlibfi/melinda-backend-commons": "^2.2.4",
		"@natlibfi/melinda-commons": "^13.0.9",
		"@natlibfi/melinda-record-import-commons": "^10.2.2",
		"http-status-codes": "^2.3.0",
		"moment": "^2.29.4",
		"node-fetch": "^2.7.0"
	},
	"devDependencies": {
		"@babel/cli": "^7.23.4",
		"@babel/core": "^7.23.6",
		"@babel/node": "^7.22.19",
		"@babel/preset-env": "^7.23.6",
		"@babel/register": "^7.22.15",
		"@natlibfi/eslint-config-melinda-backend": "^3.0.3",
		"babel-plugin-rewire": "^1.2.0",
		"babel-plugin-istanbul": "^6.1.1",
		"chai": "^4.3.10",
		"cross-env": "^7.0.3",
		"eslint": "^8.56.0",
		"eslint-plugin-import": "^2.29.1",
		"mocha": "^10.2.0",
		"nodemon": "^3.0.2",
		"nyc": "^15.1.0"
	},
	"eslintConfig": {
		"extends": "@natlibfi/melinda-backend"
	},
	"babel": {
		"presets": [
			[
				"@babel/preset-env",
				{
					"targets": "maintained node versions"
				}
			]
		],
		"env": {
			"test": {
				"plugins": [
					"istanbul",
					"rewire"
				]
			}
		}
	},
	"mocha": {
		"spec": [
			"src/*.spec.js",
			"src/**/*.spec.js"
		],
		"require": [
			"@babel/register"
		],
		"inline-diffs": true,
		"maxDiffSize": 25000,
		"bail": true,
		"exit": true
	},
	"nodemonConfig": {
		"exec": "npm run test:dev",
		"watch": [
			"src/*",
			"test-fixtures/*"
		]
	},
	"nyc": {
		"exclude": [
			"src/*.spec.js",
			"src/**/*.spec.js"
		],
		"reporter": [
			"text"
		],
		"sourceMap": false,
		"instrument": false,
		"lines": 80,
		"statements": 80,
		"functions": 80,
		"branches": 80
	}
}
